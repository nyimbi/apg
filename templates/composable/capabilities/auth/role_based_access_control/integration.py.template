import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
role_based_access_control_bp = Blueprint(
	'role_based_access_control',
	__name__,
	url_prefix='/security/role_based_access_control',
	template_folder='templates',
	static_folder='static'
)


def integrate_role_based_access_control(app, appbuilder, db):
	"""
	Integrate Role-Based Access Control capability into the application.
	
	Args:
		app: Flask application instance
		appbuilder: Flask-AppBuilder instance
		db: SQLAlchemy database instance
	"""
	try:
		# Register blueprint
		app.register_blueprint(role_based_access_control_bp)
		
		# Import and register models
		from .models import *  # noqa
		
		# Import and register views
		from .views import *  # noqa
		
		# Apply security-specific configuration
		config_additions = {}
		for key, value in config_additions.items():
			if key not in app.config or not app.config[key]:
				app.config[key] = value
		
		# Initialize security service
		security_service = RoleBasedAccessControlService(app, appbuilder, db)
		app.extensions['role_based_access_control_service'] = security_service
		
		# Register views with AppBuilder
		appbuilder.add_view(
			RoleBasedAccessControlView,
			"Role-Based Access Control",
			icon="fa-shield-alt",
			category="Security",
			category_icon="fa-lock"
		)
		
		log.info(f"Successfully integrated Role-Based Access Control capability")
		
	except Exception as e:
		log.error(f"Failed to integrate Role-Based Access Control capability: {e}")
		raise


