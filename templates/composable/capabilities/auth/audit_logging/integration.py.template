import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
audit_logging_bp = Blueprint(
	'audit_logging',
	__name__,
	url_prefix='/security/audit_logging',
	template_folder='templates',
	static_folder='static'
)


def integrate_audit_logging(app, appbuilder, db):
	"""
	Integrate Audit Logging capability into the application.
	
	Args:
		app: Flask application instance
		appbuilder: Flask-AppBuilder instance
		db: SQLAlchemy database instance
	"""
	try:
		# Register blueprint
		app.register_blueprint(audit_logging_bp)
		
		# Import and register models
		from .models import *  # noqa
		
		# Import and register views
		from .views import *  # noqa
		
		# Apply security-specific configuration
		config_additions = {'AUDIT_LOG_RETENTION_DAYS': 2555, 'ELASTICSEARCH_URL': 'http://localhost:9200', 'LOG_INTEGRITY_CHECK': True}
		for key, value in config_additions.items():
			if key not in app.config or not app.config[key]:
				app.config[key] = value
		
		# Initialize security service
		security_service = AuditLoggingService(app, appbuilder, db)
		app.extensions['audit_logging_service'] = security_service
		
		# Register views with AppBuilder
		appbuilder.add_view(
			AuditLoggingView,
			"Audit Logging",
			icon="fa-shield-alt",
			category="Security",
			category_icon="fa-lock"
		)
		
		log.info(f"Successfully integrated Audit Logging capability")
		
	except Exception as e:
		log.error(f"Failed to integrate Audit Logging capability: {e}")
		raise


