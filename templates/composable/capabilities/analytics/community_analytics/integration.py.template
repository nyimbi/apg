"""
Community Analytics Integration
===============================

Integration logic for the Community Analytics capability.
Handles community contribution system functionality.
"""

import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
community_analytics_bp = Blueprint(
	'community_analytics',
	__name__,
	url_prefix='/community/community_analytics',
	template_folder='templates',
	static_folder='static'
)


def integrate_community_analytics(app, appbuilder, db):
	"""
	Integrate Community Analytics capability into the application.
	
	Args:
		app: Flask application instance
		appbuilder: Flask-AppBuilder instance
		db: SQLAlchemy database instance
	"""
	try:
		# Register blueprint
		app.register_blueprint(community_analytics_bp)
		
		# Import and register models
		from .models import *  # noqa
		
		# Import and register views
		from .views import *  # noqa
		
		# Initialize community service
		community_service = CommunityAnalyticsService(app, appbuilder, db)
		app.extensions['community_analytics_service'] = community_service
		
		# Register views with AppBuilder
		appbuilder.add_view(
			CommunityAnalyticsView,
			"Community Analytics",
			icon="fa-users",
			category="Community",
			category_icon="fa-heart"
		)
		
		log.info(f"Successfully integrated Community Analytics capability")
		
	except Exception as e:
		log.error(f"Failed to integrate Community Analytics capability: {e}")
		raise


