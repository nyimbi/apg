import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
data_warehouse_bp = Blueprint(
    'data_warehouse',
    __name__,
    url_prefix='/analytics/data_warehouse',
    template_folder='templates',
    static_folder='static'
)


def integrate_data_warehouse(app, appbuilder, db):
    """
    Integrate Data Warehouse capability into the application.
    
    Args:
        app: Flask application instance
        appbuilder: Flask-AppBuilder instance
        db: SQLAlchemy database instance
    """
    try:
        # Register blueprint
        app.register_blueprint(data_warehouse_bp)
        
        # Import and register models
        from .models import *  # noqa
        
        # Import and register views
        from .views import *  # noqa
        
        # Apply BI-specific configuration
        config_additions = {'AIRFLOW_HOME': '/opt/airflow', 'DBT_PROFILES_DIR': '/opt/dbt'}
        for key, value in config_additions.items():
            app.config[key] = value
        
        # Initialize BI service
        bi_service = DataWarehouseService(app, appbuilder, db)
        app.extensions['data_warehouse_service'] = bi_service
        
        # Register views with AppBuilder
        appbuilder.add_view(
            DataWarehouseView,
            "Data Warehouse",
            icon="fa-chart-bar",
            category="Analytics",
            category_icon="fa-analytics"
        )
        
        log.info(f"Successfully integrated Data Warehouse capability")
        
    except Exception as e:
        log.error(f"Failed to integrate Data Warehouse capability: {e}")
        raise


