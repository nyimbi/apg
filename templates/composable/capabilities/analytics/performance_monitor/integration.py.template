"""
Performance Monitor Integration
===============================

Integration logic for the Performance Monitor capability.
Handles performance monitoring and optimization functionality.
"""

import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
performance_monitor_bp = Blueprint(
	'performance_monitor',
	__name__,
	url_prefix='/performance/performance_monitor',
	template_folder='templates',
	static_folder='static'
)


def integrate_performance_monitor(app, appbuilder, db):
	"""
	Integrate Performance Monitor capability into the application.
	
	Args:
		app: Flask application instance
		appbuilder: Flask-AppBuilder instance
		db: SQLAlchemy database instance
	"""
	try:
		# Register blueprint
		app.register_blueprint(performance_monitor_bp)
		
		# Import and register models
		from .models import *  # noqa
		
		# Import and register views
		from .views import *  # noqa
		
		# Apply performance-specific configuration
		config_additions = {'MONITORING_ENABLED': True, 'METRIC_RETENTION_DAYS': 30, 'ALERT_COOLDOWN_MINUTES': 5}
		for key, value in config_additions.items():
			if key not in app.config or not app.config[key]:
				app.config[key] = value
		
		# Initialize performance service
		performance_service = PerformanceMonitorService(app, appbuilder, db)
		app.extensions['performance_monitor_service'] = performance_service
		
		# Register views with AppBuilder
		appbuilder.add_view(
			PerformanceMonitorView,
			"Performance Monitor",
			icon="fa-tachometer-alt",
			category="Performance",
			category_icon="fa-chart-line"
		)
		
		log.info(f"Successfully integrated Performance Monitor capability")
		
	except Exception as e:
		log.error(f"Failed to integrate Performance Monitor capability: {e}")
		raise


