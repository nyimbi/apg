class PerformanceMonitorView(BaseView):
	"""
	Main view for Performance Monitor capability.
	"""
	
	route_base = "/performance_monitor"
	
	@expose("/")
	def index(self):
		"""Main performance dashboard view"""
		return self.render_template("performance_monitor_dashboard.html")
	
	@expose("/metrics")
	def metrics(self):
		"""Performance metrics view"""
		return self.render_template("performance_monitor_metrics.html")
	
