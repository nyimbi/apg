{
  "name": "Reporting Engine",
  "category": "analytics",
  "description": "Automated report generation with scheduling and distribution",
  "version": "1.0.0",
  "author": "APG Team",
  "python_requirements": [
    "reportlab>=4.0.0",
    "openpyxl>=3.1.0",
    "jinja2>=3.1.0",
    "weasyprint>=59.0",
    "celery>=5.3.0",
    "schedule>=1.2.0"
  ],
  "system_requirements": [],
  "dependencies": [
    {
      "name": "data/postgresql_database",
      "version": null,
      "optional": false,
      "reason": "Query data for reports"
    },
    {
      "name": "communication/email",
      "version": null,
      "optional": true,
      "reason": "Email report distribution"
    }
  ],
  "integration": {
    "models": [
      "Report",
      "ReportTemplate",
      "ReportSchedule",
      "ReportRun"
    ],
    "views": [
      "ReportView",
      "TemplateView",
      "ScheduleView"
    ],
    "apis": [
      "reports/generate",
      "reports/schedule",
      "reports/download"
    ],
    "templates": [
      "report_builder.html",
      "report_viewer.html"
    ],
    "static_files": [],
    "config_additions": {
      "REPORTS_OUTPUT_DIR": "/var/reports",
      "CELERY_BROKER_URL": "redis://localhost:6379/0"
    },
    "database_migrations": []
  },
  "features": [
    "PDF Report Generation",
    "Excel Report Export",
    "HTML Reports",
    "Scheduled Reports",
    "Email Distribution",
    "Template Engine",
    "Parameter Queries",
    "Batch Processing"
  ],
  "configuration": {},
  "compatible_bases": [
    "flask_webapp",
    "microservice"
  ],
  "incompatible_capabilities": []
}