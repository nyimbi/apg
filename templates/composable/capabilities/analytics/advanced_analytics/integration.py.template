import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
advanced_analytics_bp = Blueprint(
    'advanced_analytics',
    __name__,
    url_prefix='/analytics/advanced_analytics',
    template_folder='templates',
    static_folder='static'
)


def integrate_advanced_analytics(app, appbuilder, db):
    """
    Integrate Advanced Analytics capability into the application.
    
    Args:
        app: Flask application instance
        appbuilder: Flask-AppBuilder instance
        db: SQLAlchemy database instance
    """
    try:
        # Register blueprint
        app.register_blueprint(advanced_analytics_bp)
        
        # Import and register models
        from .models import *  # noqa
        
        # Import and register views
        from .views import *  # noqa
        
        # Apply BI-specific configuration
        config_additions = {}
        for key, value in config_additions.items():
            app.config[key] = value
        
        # Initialize BI service
        bi_service = AdvancedAnalyticsService(app, appbuilder, db)
        app.extensions['advanced_analytics_service'] = bi_service
        
        # Register views with AppBuilder
        appbuilder.add_view(
            AdvancedAnalyticsView,
            "Advanced Analytics",
            icon="fa-chart-bar",
            category="Analytics",
            category_icon="fa-analytics"
        )
        
        log.info(f"Successfully integrated Advanced Analytics capability")
        
    except Exception as e:
        log.error(f"Failed to integrate Advanced Analytics capability: {e}")
        raise


