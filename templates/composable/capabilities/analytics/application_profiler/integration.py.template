"""
Application Profiler Integration
================================

Integration logic for the Application Profiler capability.
Handles performance monitoring and optimization functionality.
"""

import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
application_profiler_bp = Blueprint(
	'application_profiler',
	__name__,
	url_prefix='/performance/application_profiler',
	template_folder='templates',
	static_folder='static'
)


def integrate_application_profiler(app, appbuilder, db):
	"""
	Integrate Application Profiler capability into the application.
	
	Args:
		app: Flask application instance
		appbuilder: Flask-AppBuilder instance
		db: SQLAlchemy database instance
	"""
	try:
		# Register blueprint
		app.register_blueprint(application_profiler_bp)
		
		# Import and register models
		from .models import *  # noqa
		
		# Import and register views
		from .views import *  # noqa
		
		# Apply performance-specific configuration
		config_additions = {'PROFILER_ENABLED': True, 'PROFILER_SAMPLE_RATE': 100, 'PROFILER_OUTPUT_DIR': '/tmp/profiling'}
		for key, value in config_additions.items():
			if key not in app.config or not app.config[key]:
				app.config[key] = value
		
		# Initialize performance service
		performance_service = ApplicationProfilerService(app, appbuilder, db)
		app.extensions['application_profiler_service'] = performance_service
		
		# Register views with AppBuilder
		appbuilder.add_view(
			ApplicationProfilerView,
			"Application Profiler",
			icon="fa-tachometer-alt",
			category="Performance",
			category_icon="fa-chart-line"
		)
		
		log.info(f"Successfully integrated Application Profiler capability")
		
	except Exception as e:
		log.error(f"Failed to integrate Application Profiler capability: {e}")
		raise


