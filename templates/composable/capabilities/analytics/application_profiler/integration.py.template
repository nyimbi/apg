class ApplicationProfilerView(BaseView):
	"""
	Main view for Application Profiler capability.
	"""
	
	route_base = "/application_profiler"
	
	@expose("/")
	def index(self):
		"""Main performance dashboard view"""
		return self.render_template("application_profiler_dashboard.html")
	
	@expose("/metrics")
	def metrics(self):
		"""Performance metrics view"""
		return self.render_template("application_profiler_metrics.html")
	
	@expose("/optimize")
