import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
speech_processing_bp = Blueprint(
    'speech_processing',
    __name__,
    url_prefix='/ai/speech_processing',
    template_folder='templates',
    static_folder='static'
)


def integrate_speech_processing(app, appbuilder, db):
    """
    Integrate Speech Processing capability into the application.
    
    Args:
        app: Flask application instance
        appbuilder: Flask-AppBuilder instance
        db: SQLAlchemy database instance
    """
    try:
        # Register blueprint
        app.register_blueprint(speech_processing_bp)
        
        # Import and register models
        from .models import *  # noqa
        
        # Import and register views
        from .views import *  # noqa
        
        # Apply AI-specific configuration
        config_additions = {'AUDIO_UPLOAD_FOLDER': '/tmp/audio_uploads', 'SUPPORTED_AUDIO_FORMATS': ['wav', 'mp3', 'm4a', 'flac']}
        for key, value in config_additions.items():
            app.config[key] = value
        
        # Initialize AI service
        ai_service = SpeechProcessingService(app, appbuilder, db)
        app.extensions['speech_processing_service'] = ai_service
        
        log.info(f"Successfully integrated Speech Processing capability")
        
    except Exception as e:
        log.error(f"Failed to integrate Speech Processing capability: {e}")
        raise


