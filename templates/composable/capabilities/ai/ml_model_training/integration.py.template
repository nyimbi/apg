# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
ml_model_training_bp = Blueprint(
    'ml_model_training',
    __name__,
    url_prefix='/ai/ml_model_training',
    template_folder='templates',
    static_folder='static'
)


def integrate_ml_model_training(app, appbuilder, db):
    """
    Integrate ML Model Training capability into the application.
    
    Args:
        app: Flask application instance
        appbuilder: Flask-AppBuilder instance
        db: SQLAlchemy database instance
    """
    try:
        # Register blueprint
        app.register_blueprint(ml_model_training_bp)
        
        # Import and register models
        from .models import *  # noqa
        
        # Import and register views
        from .views import *  # noqa
        
        # Apply AI-specific configuration
        config_additions = {'ML_MODEL_STORAGE': '/var/models', 'MLFLOW_TRACKING_URI': 'sqlite:///mlflow.db'}
        for key, value in config_additions.items():
            app.config[key] = value
        
        # Initialize AI service
        ai_service = MLModelTrainingService(app, appbuilder, db)
        app.extensions['ml_model_training_service'] = ai_service
        
        log.info(f"Successfully integrated ML Model Training capability")
        
    except Exception as e:
        log.error(f"Failed to integrate ML Model Training capability: {e}")
        raise


