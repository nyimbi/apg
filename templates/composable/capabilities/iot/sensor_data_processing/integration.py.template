# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
sensor_data_processing_bp = Blueprint(
    'sensor_data_processing',
    __name__,
    url_prefix='/iot/sensor_data_processing',
    template_folder='templates',
    static_folder='static'
)


def integrate_sensor_data_processing(app, appbuilder, db):
    """
    Integrate Sensor Data Processing capability into the application.
    
    Args:
        app: Flask application instance
        appbuilder: Flask-AppBuilder instance
        db: SQLAlchemy database instance
    """
    try:
        # Register blueprint
        app.register_blueprint(sensor_data_processing_bp)
        
        # Import and register models
        from .models import *  # noqa
        
        # Import and register views
        from .views import *  # noqa
        
        # Apply IoT-specific configuration
        config_additions = {}
        for key, value in config_additions.items():
            app.config[key] = value
        
        # Initialize IoT services
        iot_service = SensorDataProcessingService(app, appbuilder, db)
        app.extensions['sensor_data_processing_service'] = iot_service
        
        log.info(f"Successfully integrated Sensor Data Processing capability")
        
    except Exception as e:
        log.error(f"Failed to integrate Sensor Data Processing capability: {e}")
        raise


