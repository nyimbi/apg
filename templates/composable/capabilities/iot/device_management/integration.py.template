import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
device_management_bp = Blueprint(
    'device_management',
    __name__,
    url_prefix='/iot/device_management',
    template_folder='templates',
    static_folder='static'
)


def integrate_device_management(app, appbuilder, db):
    """
    Integrate Device Management capability into the application.
    
    Args:
        app: Flask application instance
        appbuilder: Flask-AppBuilder instance
        db: SQLAlchemy database instance
    """
    try:
        # Register blueprint
        app.register_blueprint(device_management_bp)
        
        # Import and register models
        from .models import *  # noqa
        
        # Import and register views
        from .views import *  # noqa
        
        # Apply IoT-specific configuration
        config_additions = {}
        for key, value in config_additions.items():
            app.config[key] = value
        
        # Initialize IoT services
        iot_service = DeviceManagementService(app, appbuilder, db)
        app.extensions['device_management_service'] = iot_service
        
        log.info(f"Successfully integrated Device Management capability")
        
    except Exception as e:
        log.error(f"Failed to integrate Device Management capability: {e}")
        raise


