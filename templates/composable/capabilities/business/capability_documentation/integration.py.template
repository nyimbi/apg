"""
Capability Documentation Integration
====================================

Integration logic for the Capability Documentation capability.
Handles community contribution system functionality.
"""

import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
capability_documentation_bp = Blueprint(
	'capability_documentation',
	__name__,
	url_prefix='/community/capability_documentation',
	template_folder='templates',
	static_folder='static'
)


def integrate_capability_documentation(app, appbuilder, db):
	"""
	Integrate Capability Documentation capability into the application.
	
	Args:
		app: Flask application instance
		appbuilder: Flask-AppBuilder instance
		db: SQLAlchemy database instance
	"""
	try:
		# Register blueprint
		app.register_blueprint(capability_documentation_bp)
		
		# Import and register models
		from .models import *  # noqa
		
		# Import and register views
		from .views import *  # noqa
		
		# Initialize community service
		community_service = CapabilityDocumentationService(app, appbuilder, db)
		app.extensions['capability_documentation_service'] = community_service
		
		# Register views with AppBuilder
		appbuilder.add_view(
			CapabilityDocumentationView,
			"Capability Documentation",
			icon="fa-users",
			category="Community",
			category_icon="fa-heart"
		)
		
		log.info(f"Successfully integrated Capability Documentation capability")
		
	except Exception as e:
		log.error(f"Failed to integrate Capability Documentation capability: {e}")
		raise


