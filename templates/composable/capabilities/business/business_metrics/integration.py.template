import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
business_metrics_bp = Blueprint(
    'business_metrics',
    __name__,
    url_prefix='/business/business_metrics',
    template_folder='templates',
    static_folder='static'
)


def integrate_business_metrics(app, appbuilder, db):
    """
    Integrate Business Metrics capability into the application.
    
    Args:
        app: Flask application instance
        appbuilder: Flask-AppBuilder instance
        db: SQLAlchemy database instance
    """
    try:
        # Register blueprint
        app.register_blueprint(business_metrics_bp)
        
        # Import and register models
        from .models import *  # noqa
        
        # Import and register views
        from .views import *  # noqa
        
        # Apply BI-specific configuration
        config_additions = {}
        for key, value in config_additions.items():
            app.config[key] = value
        
        # Initialize BI service
        bi_service = BusinessMetricsService(app, appbuilder, db)
        app.extensions['business_metrics_service'] = bi_service
        
        # Register views with AppBuilder
        appbuilder.add_view(
            BusinessMetricsView,
            "Business Metrics",
            icon="fa-chart-bar",
            category="Analytics",
            category_icon="fa-analytics"
        )
        
        log.info(f"Successfully integrated Business Metrics capability")
        
    except Exception as e:
        log.error(f"Failed to integrate Business Metrics capability: {e}")
        raise


