{
  "name": "Capability Installer",
  "category": "business",
  "description": "Automated installation and management of community capabilities",
  "version": "1.0.0",
  "author": "APG Team",
  "python_requirements": [
    "pip>=23.0.0",
    "virtualenv>=20.24.0",
    "docker>=6.1.0"
  ],
  "system_requirements": [],
  "dependencies": [
    {
      "name": "business/capability_validator",
      "version": null,
      "optional": false,
      "reason": "Validate before installation"
    },
    {
      "name": "data/postgresql_database",
      "version": null,
      "optional": false,
      "reason": "Track installed capabilities"
    }
  ],
  "integration": {
    "models": [
      "InstalledCapability",
      "InstallationLog",
      "DependencyGraph",
      "UpdateHistory"
