class AutoScalerView(BaseView):
	"""
	Main view for Auto Scaler capability.
	"""
	
	route_base = "/auto_scaler"
	
	@expose("/")
	def index(self):
		"""Main performance dashboard view"""
		return self.render_template("auto_scaler_dashboard.html")
	
	@expose("/metrics")
	def metrics(self):
		"""Performance metrics view"""
		return self.render_template("auto_scaler_metrics.html")
	
	@expose("/optimize")
