Serverless Computing Integration
================================

Integration logic for the Serverless Computing capability.
Handles cloud-specific setup and configuration.
"""

import logging
from flask import Blueprint
from flask_appbuilder import BaseView

# Configure logging
log = logging.getLogger(__name__)

# Create capability blueprint
serverless_computing_bp = Blueprint(
	'serverless_computing',
	__name__,
	url_prefix='/cloud/serverless_computing',
	template_folder='templates',
	static_folder='static'
)


def integrate_serverless_computing(app, appbuilder, db):
	"""
	Integrate Serverless Computing capability into the application.
	
	Args:
		app: Flask application instance
		appbuilder: Flask-AppBuilder instance
		db: SQLAlchemy database instance
	"""
	try:
		# Register blueprint
		app.register_blueprint(serverless_computing_bp)
		
		# Import and register models
		from .models import *  # noqa
		
		# Import and register views
		from .views import *  # noqa
		
		# Apply cloud-specific configuration
		config_additions = {'SERVERLESS_STAGE': 'dev', 'SERVERLESS_REGION': 'us-east-1', 'FUNCTION_TIMEOUT': 300, 'FUNCTION_MEMORY': 128}
		for key, value in config_additions.items():
			if key not in app.config or not app.config[key]:
				app.config[key] = value
		
		# Initialize cloud service
		cloud_service = ServerlessComputingService(app, appbuilder, db)
		app.extensions['serverless_computing_service'] = cloud_service
		
		# Register views with AppBuilder
		appbuilder.add_view(
			ServerlessComputingView,
			"Serverless Computing",
			icon="fa-cloud",
			category="Cloud Services",
			category_icon="fa-cloud"
		)
		
		log.info(f"Successfully integrated Serverless Computing capability")
		
	except Exception as e:
		log.error(f"Failed to integrate Serverless Computing capability: {e}")
		raise


