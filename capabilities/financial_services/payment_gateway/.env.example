# APG Payment Gateway Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Configuration
APP_ENV=development
DEBUG=true
LOG_LEVEL=debug
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Database Configuration
DATABASE_URL=postgresql://payment_user:your_password@localhost:5432/payment_gateway
POSTGRES_PASSWORD=your_secure_postgres_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Adyen Configuration
ADYEN_API_KEY=your_adyen_api_key
ADYEN_MERCHANT_ACCOUNT=your_merchant_account
ADYEN_CLIENT_KEY=your_client_key
ADYEN_HMAC_KEY=your_hmac_key
ADYEN_ENVIRONMENT=test

# Flutterwave Configuration
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_public_key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_secret_key
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST-your_encryption_key
FLUTTERWAVE_ENVIRONMENT=sandbox

# Pesapal Configuration
PESAPAL_CONSUMER_KEY=your_consumer_key
PESAPAL_CONSUMER_SECRET=your_consumer_secret
PESAPAL_ENVIRONMENT=sandbox
PESAPAL_IPN_URL=https://your-domain.com/webhooks/pesapal

# DPO Configuration
DPO_COMPANY_TOKEN_SANDBOX=your_sandbox_token
DPO_COMPANY_TOKEN_LIVE=your_live_token
DPO_SERVICE_TYPE=your_service_type
DPO_ENVIRONMENT=sandbox
DPO_CALLBACK_URL=https://your-domain.com/webhooks/dpo

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_BUSINESS_SHORTCODE=174379
MPESA_PASSKEY=your_passkey
MPESA_ENVIRONMENT=sandbox
MPESA_CALLBACK_URL=https://your-domain.com/webhooks/mpesa
MPESA_INITIATOR_NAME=testapi
MPESA_SECURITY_CREDENTIAL=your_security_credential

# Monitoring & Observability
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
DATADOG_API_KEY=your_datadog_api_key
PROMETHEUS_METRICS_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Grafana
GRAFANA_PASSWORD=your_secure_grafana_password

# SSL/TLS (for production)
SSL_CERT_PATH=/path/to/certificate.pem
SSL_KEY_PATH=/path/to/private_key.pem

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Webhook Security
WEBHOOK_SIGNATURE_SECRET=your_webhook_signature_secret

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_ENTRIES=10000

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000  # requests per hour per user

# Background Jobs
BACKGROUND_JOBS_ENABLED=true
JOB_QUEUE_URL=redis://localhost:6379/1

# Feature Flags
ENABLE_METRICS_COLLECTION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_FRAUD_DETECTION=true
ENABLE_AUTOMATIC_RETRIES=true

# Development/Testing
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_payment_gateway
MOCK_EXTERNAL_APIS=false
ENABLE_DEBUG_ROUTES=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# Notification Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASSWORD=your_app_password
EMAIL_FROM_ADDRESS=noreply@your-domain.com

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#payment-alerts

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20