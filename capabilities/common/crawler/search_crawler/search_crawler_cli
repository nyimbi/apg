#!/usr/bin/env python3
"""
Search Crawler CLI Entry Point
==============================

Executable entry point for the Search Crawler CLI tool.
This script can be installed as a command-line tool.

Usage:
    ./search_crawler_cli "Ethiopia conflict" --mode conflict
    python search_crawler_cli --help
    search-crawler --interactive

Author: Nyimbi Odero
Company: Datacraft (www.datacraft.co.ke)
"""

import sys
import os
from pathlib import Path

# Add the search crawler package to Python path
package_dir = Path(__file__).parent
sys.path.insert(0, str(package_dir))

# Import and run CLI
if __name__ == "__main__":
    try:
        from cli import main
        main()
    except ImportError as e:
        print(f"Error: Failed to import CLI module: {e}")
        print("Make sure you're running from the search_crawler package directory")
        sys.exit(1)
    except Exception as e:
        print(f"Fatal error: {e}")
        sys.exit(1)