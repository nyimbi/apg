# APG Multi-language Localization - Environment Configuration
#
# Example environment configuration file for development and production deployment
# Copy this file to .env and update values for your environment
#
# Author: Nyimbi Odero
# Company: Datacraft
# Copyright: Â© 2025 Datacraft. All rights reserved.

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Application Configuration
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://localization_user:secure_password@localhost:5432/localization

# Database Connection Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_POOL_PRE_PING=true

# Database Credentials (Individual Components)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=localization
POSTGRES_USER=localization_user
POSTGRES_PASSWORD=secure_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Cache URL
# Format: redis://username:password@host:port/db
REDIS_URL=redis://localhost:6379/0

# Redis Connection Settings
REDIS_PASSWORD=redis_password
REDIS_POOL_SIZE=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# Celery Configuration (Redis-based)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKERS=4
CELERY_CONCURRENCY=2
CELERY_MAX_RETRIES=3
CELERY_RETRY_DELAY=60

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Application Secret Keys (CHANGE IN PRODUCTION!)
SECRET_KEY=your_super_secret_key_change_in_production
JWT_SECRET_KEY=jwt_secret_key_change_in_production
ENCRYPTION_KEY=encryption_key_change_in_production

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:3001"]
ALLOWED_HOSTS=["localhost","127.0.0.1","localization.local"]

# Authentication Settings
JWT_EXPIRATION_HOURS=24
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8

# =============================================================================
# TRANSLATION SERVICES
# =============================================================================

# Google Translate API
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id

# Azure Translator
AZURE_TRANSLATOR_KEY=your_azure_translator_key_here
AZURE_TRANSLATOR_REGION=your_azure_region
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# DeepL API
DEEPL_API_KEY=your_deepl_api_key_here
DEEPL_API_URL=https://api-free.deepl.com

# Amazon Translate
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_TRANSLATE_SERVICE_REGION=us-east-1

# Translation Features
ENABLE_AUTO_TRANSLATION=true
ENABLE_TRANSLATION_MEMORY=true
DEFAULT_LOCALE=en-US
FALLBACK_LANGUAGE=en
QUALITY_THRESHOLD=7.0

# =============================================================================
# APG PLATFORM INTEGRATION
# =============================================================================

# APG Platform Configuration
APG_PLATFORM_URL=http://localhost:8080
APG_API_KEY=your_apg_api_key_here
APG_WEBHOOK_SECRET=your_apg_webhook_secret_here

# Service Discovery
APG_SERVICE_NAME=multi-language-localization
APG_SERVICE_VERSION=1.0.0
APG_SERVICE_DESCRIPTION=Enterprise i18n/l10n service
APG_CAPABILITY_TYPE=general_cross_functional

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Caching Settings
CACHE_TTL=3600
CACHE_MAX_ENTRIES=10000
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# Request Settings
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30
KEEPALIVE_TIMEOUT=65

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# =============================================================================
# FILE HANDLING
# =============================================================================

# Upload Configuration
MAX_UPLOAD_SIZE=52428800
ALLOWED_FILE_TYPES=.csv,.json,.xliff,.tmx,.xlsx,.po,.properties,.xml
UPLOAD_PATH=/app/uploads
TEMP_PATH=/app/temp

# Export Configuration
EXPORT_PATH=/app/exports
EXPORT_FORMATS=csv,json,xliff,tmx,excel,gettext
EXPORT_BATCH_SIZE=1000

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Prometheus Metrics
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/localization.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=5

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@datacraft.co.ke

# Slack Integration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#localization
SLACK_USERNAME=LocalizationBot

# Webhook Configuration
WEBHOOK_ENABLED=true
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRIES=3

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Features
ENABLE_API_DOCS=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false

# Testing Configuration
TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_pass@localhost:5432/test_localization
TEST_REDIS_URL=redis://localhost:6379/15

# Fake Data Generation
GENERATE_SAMPLE_DATA=false
SAMPLE_DATA_SIZE=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
FEATURE_MACHINE_TRANSLATION=true
FEATURE_BULK_TRANSLATION=true
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_TRANSLATION_MEMORY=true
FEATURE_QUALITY_ASSURANCE=true

# Advanced Features
FEATURE_CULTURAL_FORMATTING=true
FEATURE_RTL_SUPPORT=true
FEATURE_COMPLEX_SCRIPTS=true
FEATURE_VOICE_TRANSLATION=false
FEATURE_IMAGE_TRANSLATION=false

# UI Features
FEATURE_TRANSLATION_WORKBENCH=true
FEATURE_COLLABORATIVE_EDITING=true
FEATURE_TRANSLATION_SUGGESTIONS=true
FEATURE_KEYBOARD_SHORTCUTS=true

# =============================================================================
# SUPPORTED CONFIGURATIONS
# =============================================================================

# Language Support
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,nl,ru,zh,ja,ko,ar,he,hi,th,vi,pl,tr,sv,no,da,fi,cs,sk,hu,ro,bg,hr,sl,et,lv,lt,mt,ga,cy,eu,ca,gl

# Content Types
SUPPORTED_CONTENT_TYPES=ui_text,email_template,sms_template,content,error_message,notification,marketing

# Export Formats
SUPPORTED_EXPORT_FORMATS=csv,json,xliff,tmx,excel,gettext

# Translation Providers
TRANSLATION_PROVIDERS=google,azure,deepl,amazon

# =============================================================================
# DOCKER/CONTAINER CONFIGURATION
# =============================================================================

# Container Settings
CONTAINER_USER=appuser
CONTAINER_GROUP=appuser
CONTAINER_UID=1000
CONTAINER_GID=1000

# Volume Mounts
LOGS_VOLUME=/app/logs
DATA_VOLUME=/app/data
UPLOADS_VOLUME=/app/uploads

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================

# Kubernetes Namespace
K8S_NAMESPACE=localization
K8S_SERVICE_ACCOUNT=localization-service-account

# Resource Limits
K8S_CPU_REQUEST=500m
K8S_CPU_LIMIT=1000m
K8S_MEMORY_REQUEST=512Mi
K8S_MEMORY_LIMIT=2Gi

# Autoscaling
K8S_MIN_REPLICAS=3
K8S_MAX_REPLICAS=20
K8S_TARGET_CPU=70
K8S_TARGET_MEMORY=80

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# S3 Backup Storage
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key
BACKUP_S3_REGION=us-east-1

# Backup Encryption
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =============================================================================
# COMPLIANCE AND SECURITY
# =============================================================================

# Data Privacy
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=2555  # 7 years
ANONYMIZE_USER_DATA=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Code Quality
ENABLE_LINTING=true
ENABLE_TYPE_CHECKING=true
ENABLE_SECURITY_SCANNING=true

# Documentation
AUTO_GENERATE_DOCS=true
API_DOCS_URL=/docs
REDOC_URL=/redoc

# =============================================================================
# COMPANY INFORMATION
# =============================================================================

# Organization Details
COMPANY_NAME=Datacraft
COMPANY_WEBSITE=www.datacraft.co.ke
COMPANY_EMAIL=info@datacraft.co.ke
SUPPORT_EMAIL=support@datacraft.co.ke

# Copyright and Legal
COPYRIGHT_YEAR=2025
LICENSE=Proprietary
PRIVACY_POLICY_URL=https://www.datacraft.co.ke/privacy
TERMS_OF_SERVICE_URL=https://www.datacraft.co.ke/terms