# APG Employee Data Management - Production Environment Configuration

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=postgres-service
DB_PORT=5432
DB_NAME=apg_hr
DB_USER=apg_user
DB_PASSWORD=${DB_PASSWORD}
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# Security Configuration
JWT_SECRET=${JWT_SECRET}
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24
ENCRYPTION_KEY=${ENCRYPTION_KEY}
SESSION_TIMEOUT=3600
CORS_ORIGINS=https://app.company.com,https://admin.company.com
ALLOWED_HOSTS=api.company.com,employee-api.company.com

# APG Platform Integration
APG_TENANT_ID=default
APG_AI_ORCHESTRATION_URL=http://ai-orchestration-service:8080
APG_AUDIT_COMPLIANCE_URL=http://audit-compliance-service:8080
APG_FEDERATED_LEARNING_URL=http://federated-learning-service:8080
APG_REAL_TIME_COLLABORATION_URL=http://real-time-collaboration-service:8080

# AI Configuration
AI_PROVIDER=hybrid
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OLLAMA_HOST=http://ollama-service:11434
OLLAMA_MODEL=llama2
AI_CACHE_TTL=3600
AI_RETRY_ATTEMPTS=3

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=30
KEEPALIVE=2
PRELOAD_APP=true

# File Upload Configuration
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,txt,csv,xlsx
UPLOAD_PATH=/app/uploads
TEMP_PATH=/tmp

# Caching Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=apg_hr_
CACHE_THRESHOLD=500

# Monitoring & Observability
METRICS_ENABLED=true
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://jaeger-collector:14268
PROMETHEUS_METRICS_PATH=/metrics
SENTRY_DSN=${SENTRY_DSN}

# Email Configuration
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=alerts@company.com
SMTP_PASSWORD=${SMTP_PASSWORD}
MAIL_FROM=noreply@company.com

# Notification Configuration
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
TEAMS_WEBHOOK_URL=${TEAMS_WEBHOOK_URL}
PAGERDUTY_ROUTING_KEY=${PAGERDUTY_ROUTING_KEY}

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_INTELLIGENT_MATCHING=true
ENABLE_WORKFLOW_AUTOMATION=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_GLOBAL_COMPLIANCE=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_CONVERSATIONAL_INTERFACE=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STORAGE=redis

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_RETRIES=3

# Compliance Configuration
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true
ENCRYPTION_AT_REST=true

# API Configuration
API_VERSION=v1
API_TITLE="APG Employee Data Management API"
API_DESCRIPTION="Revolutionary Employee Data Management Platform with AI-Powered Automation"
API_PREFIX=/api/v1
API_DOCS_URL=/api/v1/docs
API_REDOC_URL=/api/v1/redoc

# Internationalization
DEFAULT_LOCALE=en_US
SUPPORTED_LOCALES=en_US,es_ES,fr_FR,de_DE,ja_JP,zh_CN
TIMEZONE=UTC

# Database Optimization
DB_ECHO=false
DB_AUTOCOMMIT=false
DB_AUTOFLUSH=false
DB_EXPIRE_ON_COMMIT=false
DB_ISOLATION_LEVEL=READ_COMMITTED

# Async Configuration
ASYNC_POOL_SIZE=10
ASYNC_MAX_CONNECTIONS=100
ASYNC_TIMEOUT=30

# Vector Search Configuration
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.8
VECTOR_INDEX_TYPE=ivfflat
VECTOR_INDEX_LISTS=100