# APG Employee Data Management - Development Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=apg_hr_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=
REDIS_POOL_SIZE=5
REDIS_TIMEOUT=5

# Security Configuration
JWT_SECRET=dev-jwt-secret-key-for-development-only
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24
ENCRYPTION_KEY=dev-encryption-key-32-chars-long
SESSION_TIMEOUT=3600
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# APG Platform Integration (Development endpoints)
APG_TENANT_ID=dev-tenant
APG_AI_ORCHESTRATION_URL=http://localhost:8081
APG_AUDIT_COMPLIANCE_URL=http://localhost:8082
APG_FEDERATED_LEARNING_URL=http://localhost:8083
APG_REAL_TIME_COLLABORATION_URL=http://localhost:8084

# AI Configuration
AI_PROVIDER=ollama
OPENAI_API_KEY=sk-development-key-placeholder
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2
AI_CACHE_TTL=300
AI_RETRY_ATTEMPTS=2

# Performance Configuration
WORKER_PROCESSES=1
WORKER_CONNECTIONS=100
MAX_REQUESTS=100
MAX_REQUESTS_JITTER=10
TIMEOUT=60
KEEPALIVE=2
PRELOAD_APP=false

# File Upload Configuration
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,txt,csv,xlsx
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# Caching Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=60
CACHE_KEY_PREFIX=apg_hr_dev_
CACHE_THRESHOLD=100

# Monitoring & Observability
METRICS_ENABLED=true
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268
PROMETHEUS_METRICS_PATH=/metrics
SENTRY_DSN=

# Email Configuration (Development - Console backend)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USE_TLS=false
SMTP_USERNAME=
SMTP_PASSWORD=
MAIL_FROM=dev@localhost

# Notification Configuration (Development)
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
PAGERDUTY_ROUTING_KEY=

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_INTELLIGENT_MATCHING=true
ENABLE_WORKFLOW_AUTOMATION=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_GLOBAL_COMPLIANCE=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_CONVERSATIONAL_INTERFACE=true

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STORAGE=memory

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=./backups

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_INTERVAL=15
HEALTH_CHECK_RETRIES=2

# Compliance Configuration
GDPR_ENABLED=false
DATA_RETENTION_DAYS=90
AUDIT_LOG_ENABLED=true
ENCRYPTION_AT_REST=false

# API Configuration
API_VERSION=v1
API_TITLE="APG Employee Data Management API - Development"
API_DESCRIPTION="Development environment for APG Employee Data Management Platform"
API_PREFIX=/api/v1
API_DOCS_URL=/api/v1/docs
API_REDOC_URL=/api/v1/redoc

# Internationalization
DEFAULT_LOCALE=en_US
SUPPORTED_LOCALES=en_US,es_ES
TIMEZONE=UTC

# Database Optimization
DB_ECHO=true
DB_AUTOCOMMIT=false
DB_AUTOFLUSH=false
DB_EXPIRE_ON_COMMIT=false
DB_ISOLATION_LEVEL=READ_COMMITTED

# Async Configuration
ASYNC_POOL_SIZE=2
ASYNC_MAX_CONNECTIONS=10
ASYNC_TIMEOUT=30

# Vector Search Configuration
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.8
VECTOR_INDEX_TYPE=ivfflat
VECTOR_INDEX_LISTS=10