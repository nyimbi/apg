# APG Employee Data Management - Staging Environment Configuration

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=postgres-staging.company.com
DB_PORT=5432
DB_NAME=apg_hr_staging
DB_USER=apg_user_staging
DB_PASSWORD=${DB_PASSWORD}
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_HOST=redis-staging.company.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_POOL_SIZE=5
REDIS_TIMEOUT=5

# Security Configuration
JWT_SECRET=${JWT_SECRET}
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24
ENCRYPTION_KEY=${ENCRYPTION_KEY}
SESSION_TIMEOUT=3600
CORS_ORIGINS=https://staging-app.company.com,https://staging-admin.company.com
ALLOWED_HOSTS=staging-api.company.com

# APG Platform Integration
APG_TENANT_ID=staging
APG_AI_ORCHESTRATION_URL=http://ai-orchestration-staging:8080
APG_AUDIT_COMPLIANCE_URL=http://audit-compliance-staging:8080
APG_FEDERATED_LEARNING_URL=http://federated-learning-staging:8080
APG_REAL_TIME_COLLABORATION_URL=http://real-time-collaboration-staging:8080

# AI Configuration
AI_PROVIDER=hybrid
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7
OLLAMA_HOST=http://ollama-staging:11434
OLLAMA_MODEL=llama2
AI_CACHE_TTL=1800
AI_RETRY_ATTEMPTS=3

# Performance Configuration
WORKER_PROCESSES=2
WORKER_CONNECTIONS=500
MAX_REQUESTS=500
MAX_REQUESTS_JITTER=50
TIMEOUT=30
KEEPALIVE=2
PRELOAD_APP=true

# File Upload Configuration
UPLOAD_MAX_SIZE=25MB
UPLOAD_ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,txt,csv,xlsx
UPLOAD_PATH=/app/uploads
TEMP_PATH=/tmp

# Caching Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=apg_hr_staging_
CACHE_THRESHOLD=250

# Monitoring & Observability
METRICS_ENABLED=true
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://jaeger-staging:14268
PROMETHEUS_METRICS_PATH=/metrics
SENTRY_DSN=${SENTRY_DSN}

# Email Configuration
SMTP_HOST=smtp-staging.company.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=alerts-staging@company.com
SMTP_PASSWORD=${SMTP_PASSWORD}
MAIL_FROM=noreply-staging@company.com

# Notification Configuration
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL_STAGING}
TEAMS_WEBHOOK_URL=${TEAMS_WEBHOOK_URL_STAGING}
PAGERDUTY_ROUTING_KEY=${PAGERDUTY_ROUTING_KEY_STAGING}

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_INTELLIGENT_MATCHING=true
ENABLE_WORKFLOW_AUTOMATION=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_GLOBAL_COMPLIANCE=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_CONVERSATIONAL_INTERFACE=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STORAGE=redis

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=14
BACKUP_STORAGE_PATH=/app/backups

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_RETRIES=3

# Compliance Configuration
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true
ENCRYPTION_AT_REST=true

# API Configuration
API_VERSION=v1
API_TITLE="APG Employee Data Management API - Staging"
API_DESCRIPTION="Staging environment for APG Employee Data Management Platform"
API_PREFIX=/api/v1
API_DOCS_URL=/api/v1/docs
API_REDOC_URL=/api/v1/redoc

# Internationalization
DEFAULT_LOCALE=en_US
SUPPORTED_LOCALES=en_US,es_ES,fr_FR,de_DE
TIMEZONE=UTC

# Database Optimization
DB_ECHO=false
DB_AUTOCOMMIT=false
DB_AUTOFLUSH=false
DB_EXPIRE_ON_COMMIT=false
DB_ISOLATION_LEVEL=READ_COMMITTED

# Async Configuration
ASYNC_POOL_SIZE=5
ASYNC_MAX_CONNECTIONS=50
ASYNC_TIMEOUT=30

# Vector Search Configuration
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.8
VECTOR_INDEX_TYPE=ivfflat
VECTOR_INDEX_LISTS=50